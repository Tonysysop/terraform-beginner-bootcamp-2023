#!/usr/bin/env bash

grep "alias tf='terraform'" ~/.bash_profile

if [ $? -ne 0 ]; then

#if the alias doesnt exist append it to the bash_profile
echo "alias tf='terraform'" >> ~/.bash_profile
echo "alias cls='clear'" >> ~/.bash_profile
echo "alias tf-apply-auto='terraform apply --auto-approve'" >> ~/.bash_profile
echo "alias tf-destroy-auto='terraform destroy --auto-approve'" >> ~/.bash_profile

echo "Alias Added successfully."

else
    #inform the user if the alias already exist
    echo "alias already exist in .bash_profile"
fi
source ~/.bash_profile

source ~/.bash_profile

source ~/.bash_profile
source ~/.bash_profile
